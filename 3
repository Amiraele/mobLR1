
fun main(){
    println("Введите число")
    var S1:Int = readLine()!!.toInt()
    var n1 = S1%7
    when (n1) {
        1 -> print("Понедельник")
        2 -> print("Вторник")
        3 -> print("Среда")
        4 -> print("Четверг")
        5-> print("Пятница")
        6 -> print("Суббота")
        7 -> print("Понедельник")
    }
}
